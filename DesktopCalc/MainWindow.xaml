<Window x:Class="DesktopCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopCalc"
        mc:Ignorable="d"
        Title="DesktopCalc" Height="350" Width="525"
        Topmost="True"
        WindowStyle="None"
        MouseDown="Window_MouseDown"
        AllowsTransparency="True"
        BorderThickness="3"
        BorderBrush="Black"
        Deactivated="Window_Deactivated"
        Activated="Window_Activated">
    <DockPanel Background="#eee">
        <TextBox DockPanel.Dock="Bottom" FontFamily="Comic Sans MS" FontSize="27" TextChanged="TextBox_TextChanged" VerticalAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBlock FontFamily="Comic Sans MS" FontWeight="DemiBold" FontSize="42" x:Name="textblock" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </DockPanel>
</Window>
